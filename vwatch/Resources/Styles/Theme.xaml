<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Theme colours  -->
    <SolidColorBrush x:Key="Background" Color="#282C34" />
    <SolidColorBrush x:Key="Primary" Color="#2D3139" />
    <SolidColorBrush x:Key="Secondary" Color="#353941" />
    <SolidColorBrush x:Key="Accent" Color="#007ACC" />
    <SolidColorBrush x:Key="Text" Color="#FFFFFF" />

    <CornerRadius x:Key="DefaultCornerRadius">4</CornerRadius>

    <Style x:Key="RoundedCornerPanel" TargetType="Border">
        <Setter Property="CornerRadius" Value="{StaticResource DefaultCornerRadius}" />
        <Setter Property="Background" Value="{StaticResource Primary}" />
    </Style>

</ResourceDictionary>